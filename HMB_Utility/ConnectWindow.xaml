<Window x:Class="HMB_Utility.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMB_Utility"
        mc:Ignorable="d"
        Height="80" Width="100"
        ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStyle="None"
        Background="Transparent">


    <Grid>
        <Button x:Name="ConnectBtn" Command="{Binding ConnectCommand}" Content="Connect" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top" Width="75" Background="Green" Opacity="1"/>
        <Button x:Name="DisconnectBtn" Content="Disconnect" HorizontalAlignment="Left" Margin="12,45,0,0" VerticalAlignment="Top" Width="75" Background="Red" Opacity="1"/>
    </Grid>
</Window>
