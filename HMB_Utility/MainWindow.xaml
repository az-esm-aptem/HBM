<Window x:Class="HMB_Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMB_Utility"
        mc:Ignorable="d"
        Title="HBM" Height="600" Width="700">
    <Grid x:Name="baseGrid" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" MinHeight="150" MaxHeight="200"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" MaxWidth="500" MinWidth ="100"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="SearchDeviceButton" Content="Search Devices" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="102"
                Click="SearchDeviceButton_Click" Grid.Column="1" Grid.Row="0" Height="20" />
        <!--<TreeView x:Name="overviewTree" Margin="10" Grid.Column="0" >
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Connectors}">
                    <TextBlock Text="{Binding Name}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ShortLocationHint}" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>-->

        <TreeView x:Name="overviewTree" Margin="10" Grid.Column="0" >
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Connectors}">
                    <TextBlock Text="{Binding Name}" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        
        <GridSplitter Grid.Row="0" ShowsPreview="True" Width="3" VerticalAlignment="Stretch"/>
        <Button x:Name="Btn2" Content="Read Data" Grid.Column="1" HorizontalAlignment="Left" Margin="25,351,0,0" VerticalAlignment="Top" Width="291" Height="20" Click="Btn2_Click"/>
        <Button x:Name="Btn1" Content="Start single measurment" Grid.Column="1" HorizontalAlignment="Left" Margin="25,308,0,0" VerticalAlignment="Top" Width="285" Height="20" Click="Btn1_Click"/>
        <TextBox Name ="LogBox" HorizontalAlignment="Left" Height="130" Margin="10,10,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                 TextWrapping="Wrap" Text="Logs" VerticalAlignment="Top" Width="672"  />
        <TextBox x:Name="TB1" Grid.Column="1" HorizontalAlignment="Left" Height="251" Margin="25,35,0,0" TextWrapping="Wrap" Text="Devices" VerticalAlignment="Top" Width="189"/>
        <Button x:Name="Btn3" Content="Create DB" Grid.Column="1" HorizontalAlignment="Left" Margin="241,35,0,0" VerticalAlignment="Top" Width="75" Click="Btn3_Click"/>
        <Button x:Name="Btn4" Content="Start DAQ" Grid.Column="1" HorizontalAlignment="Left" Margin="241,107,0,0" VerticalAlignment="Top" Width="75" Click="Btn4_Click"/>
        <Button x:Name="Btn5" Content="Stop DAQ" Grid.Column="1" HorizontalAlignment="Left" Margin="241,160,0,0" VerticalAlignment="Top" Width="75" Click="Btn5_Click"/>
        <Button x:Name="Connect_btn" Content="Connect" Grid.Column="1" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="75" Click="Connect_btn_Click"/>
        <!--<GridSplitter Grid.Row="1" Grid.ColumnSpan="2" Height="3"
        HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowsPreview="True"/>-->
    </Grid>
</Window>
